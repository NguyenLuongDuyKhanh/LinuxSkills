# cat /etc/systemd/system/greengrass.service
[Unit]
Description=Greengrass Core

[Service]
Type=simple
PIDFile=/var/run/greengrass.pid
Environment==/config/tpm2-pkcs11
RemainAfterExit=no
Restart=on-failure
RestartSec=10
ExecStart=/bin/sh /greengrass/v2/alts/current/distro/bin/loader
PartOf=backup_restore_greengrass_config.service

[Install]
WantedBy=multi-user.target
